<div id="order_history" class="span-18 last content_container">
  <div class="xsnazzy">
    <div class="container">
      <div class="table-view" id="tabs">
        <ul class="listing-view">
          <li><a href="javascript:void(0);" id="tabs1" class="dark-light-green">paid</a></li>
          <li><a href="javascript:void(0);" id="tabs2" class="light-red">Cancelled Orders</a></li>
