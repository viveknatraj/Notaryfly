                  <option <% if @client.shipping_state == "WI" %> selected<% end %> value="WI">Wisconsin</option>
                  <option <% if @client.shipping_state == "WY" %> selected<% end %> value="WY">Wyoming</option>
                </select>
                <label for="shipping_zip_code">Zip Code: </label>
                <%= f.text_field :shipping_zip_code, :class => "tiny",:onkeyup=>"validateNum('client_shipping_zip_code')",:maxlength=>5%>
              </p>
            </div>
            <div class="labels wholeform">
              <p class="formaddacc"><label for="shipping_courier">Courier: </label></p>
              <p class="formright"><%= select_tag "client_shipping_courier", options_for_select(["Select one" , "FedEx", "UPS", "GSO", "OnTrac"], @client.shipping_courier), {:name => "client[shipping_courier]",:onchange => "client_profile_shipping_cour()"} %></p>
            </div>
            <div class="labels wholeform">
              <p class="formaddacc"><label for="shipping_account_number">Account #:</label></p>
              <p class="formright">
                <% if @client.shipping_courier=="Select one" %>
                  <%= f.text_field :shipping_account_number,:disabled=>'false' %>
                <%else%>
                  <%= f.text_field :shipping_account_number%>
                <%end%>
              </p>
            </div>
            <div class="clr"></div>


          </div>
          <div class="clr"></div>
        </div>
        <b class="xbottom"><b class="xb4"></b><b class="xb3"></b>
          <b class="xb2"></b><b class="xb1"></b></b>
      </div>
    </div>

    <div id="submit_buttons" class="span-18 last">
      <p><%= image_submit_tag("button_save_changes.jpg") %></p>
    </div>
    <%= hidden_field :user, :password, :value => session[:password] %>
  <% end %>
</div>

