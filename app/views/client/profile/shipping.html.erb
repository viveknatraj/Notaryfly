<%= render :partial => "/client/header" %>
<%= render :partial => "navigation" %>

<div id="content_container" class="content_container span-24 last">

  <!--<h2>My Profile</h2>
  <h3>Shipping Information (optional)</h3>-->
  <div id="client_shipping_info" style="display:none;width: 650px" >
    <p>
      The shipping information is where you will want your documents returned on a regular basis.  If you are using this feature please remember to keep your account up to date.
    </p>
    <p>
      The return shipping and courier account information will be displayed on the notaryâ€™s work order. By displaying the courier account information you are authorizing the assigned notary to use your account information for no other purpose then to send your documents back.
    </p>
  </div>


  <% form_for :client, :url => "/client/profile/update" do |f| -%>
    <div id="shipping_information" class="span-18 last" style="border:none; padding:0px;">
      <div class="xsnazzy">
        <b class="xtop"><b class="xb1"></b><b class="xb2 color_a">
          </b><b class="xb3 color_a"></b><b class="xb4 color_a"></b></b>
        <div class="xboxcontent" style="padding: 10px">
          <% if flash[:notice] %><div class="success"><%= flash[:notice] %></div><% end %>
          <p>(OPTIONAL)</br>
<span style="text-decoration:underline;">Please include "Return Shipping Label" with Docs</span></p>
          <p>If you <i><b>do not</b></i> include "Return Shipping Label" with Docs, please make sure information below is up to date.</p>
          <p>[NOTE:  The shipping instructions will show up on all Notary Work Orders.  By displaying the courier account information, you are authorizing the assigned notary to use your account information for no other purpose then to send your documents back.]</p>
          <p>You CAN make changes on each individual order if necessary.</p>
          <div id="contact_form" class="form span-16 last">
            <% if  @client.shipping_same_as_contact_info %>
              <script type="text/javascript" charset="utf-8">
                $(document).ready(function () {
                  $("#client_shipping_company_name").val("<%= @client.company_name %>");
                  $("#client_shipping_attention").val("<%= @client.client_name %>");
                  $("#client_shipping_address").val("<%= @client.address %>");
                  $("#client_shipping_address").val("<%= @client.address %>");
                  $("#client_shipping_city").val("<%= @client.city %>");
                  $("#client_shipping_state").val("<%= @client.state %>");
                  $("#client_shipping_zip_code").val("<%= @client.zip_code %>");
  
                });
              </script>
            <%end%>
            <script type="text/javascript" charset="utf-8">
              $(function(){
                $('#client_shipping_same_as_contact_info').click(function(){
                  if(document.getElementById('client_shipping_same_as_contact_info').checked)
                  {
                    $("#client_shipping_company_name").val("<%= @client.company_name %>");
                    $("#client_shipping_attention").val("<%= @client.client_name %>");
                    $("#client_shipping_address").val("<%= @client.address %>");
                    $("#client_shipping_address").val("<%= @client.address %>");
                    $("#client_shipping_city").val("<%= @client.city %>");
                    $("#client_shipping_state").val("<%= @client.state %>");
                    $("#client_shipping_zip_code").val("<%= @client.zip_code %>");
                  }
                  else
                  {
                    $("#client_shipping_company_name").val("");
                    $("#client_shipping_attention").val("");
                    $("#client_shipping_address").val("");
                    $("#client_shipping_address").val("");
                    $("#client_shipping_city").val("");
                    $("#client_shipping_state").val("");
                    $("#client_shipping_zip_code").val("");
                  }
                });
              });

            </script>
            <div class="labels wholeform">
              <p class="formaddacc"><label for="shipping_same_as_contact">Same as Contact Info</label></p>
              <p class="formright"><%= f.check_box :shipping_same_as_contact_info %></p>
            </div>
            <div class="labels wholeform">
              <p class="formaddacc"><label for="shipping_company_name">Company Name: </label></p>
              <p class="formright"><%= f.text_field :shipping_company_name %></p>
            </div>
            <div class="labels wholeform">
              <p class="formaddacc"><label for="shipping_attention">Attention: </label></p>
              <p class="formright"><%= f.text_field :shipping_attention %></p>
            </div>
            <div class="labels wholeform">
              <p class="formaddacc"><label for="shipping_address">Address: </label></p>
              <p class="formright"><%= f.text_field :shipping_address %></p>
            </div>
            <div class="labels wholeform">
              <p class="formaddacc"><label for="shipping_city">City: </label></p>
              <p class="formright"><%= f.text_field :shipping_city, :style => "width:100px; margin-left:2px; margin-right:5px;" %>
