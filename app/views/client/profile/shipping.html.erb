                  <option <% if @client.shipping_state == "IN" %> selected<% end %> value="IN">Indiana</option>
                  <option <% if @client.shipping_state == "IA" %> selected<% end %> value="IA">Iowa</option>
                  <option <% if @client.shipping_state == "KS" %> selected<% end %> value="KS">Kansas</option>
                  <option <% if @client.shipping_state == "KY" %> selected<% end %> value="KY">Kentucky</option>
                  <option <% if @client.shipping_state == "LA" %> selected<% end %> value="LA">Louisiana</option>
                  <option <% if @client.shipping_state == "ME" %> selected<% end %> value="ME">Maine</option>
                  <option <% if @client.shipping_state == "MD" %> selected<% end %> value="MD">Maryland</option>
