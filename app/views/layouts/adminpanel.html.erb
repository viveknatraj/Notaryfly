</head>
<body>
  <div id="container">
    <div id="header">
       <div id="logout">Welcome <%=session[:admin_user].capitalize%>, <a class="linktxt" href="/admin/logout">Log out</a></div>
      <h1><a href="index">Notary Fly Admin</a></h1>

     
      
      <div id="main-navigation">
        <ul>
          <li <% if params["controller"]=="admin/orders"%>class="active" <%end%>><a href="/admin/orders/index">Orders</a></li>
          <li <% if params["controller"]=="admin/notaries"%>class="active" <%end%>><a href="/admin/notaries/index">Notaries</a></li>
          <li <% if params["controller"]=="admin/executives"%>class="active" <%end%>><a href="/admin/executives/index">Executives</a></li>
          <li <% if params["controller"]=="admin/clients" and params["action"]=="index"%>class="active" <%end%>><a href="/admin/clients/index">Customers</a></li>
          <li <% if params["controller"]=="admin/clients" and params["action"]=="promocode"%>class="active" <%end%>><a href="/admin/clients/promocode">Promo Code</a></li>
          <li <% if params["controller"]=="admin/clients" and params["action"]=="settings"%>class="active" <%end%>><a href="/admin/clients/settings">Settings</a></li>
        </ul>
        <div class="clear"></div>
      </div>
    </div>
    <div id="wrapper">
      <div id="main">

		<%= yield %>
		
        <div id="footer">
          <div class="block">
            <p>Copyright &copy; Copyright 2012-2014 NotaryFly</p>
          </div>
        </div>
      </div>
      <div id="sidebar">

        <div class="block">
          <h3>Sidebar</h3>
          <ul class="navigation">
            <li><a href="/admin/orders/index">Orders</a></li>
            <li><a href="/admin/clients/index">Clients</a></li>
            <li><a href="/admin/notaries/index">Notaries</a></li>
            <li><a href="/admin/executives/index">Executives</a></li>
            <li><a href="/admin/clients/promocode">Promo Code</a></li>
            <li><a href="/admin/clients/settings">Settings</a></li>
          </ul>
        </div>

      </div>
      <div class="clear"></div>
    </div>
    <div id="notary_profile"></div>
    <div id="lightbox-bg"></div>


  </div>
</body>
</html>

