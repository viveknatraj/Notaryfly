<h2>Edit Executive</h2>
<% if flash[:errors].present? %>
				<div class="flash error" style="margin-top:10px;">
								<ul>
												<% flash[:errors].each {|e| %>
																<li><%= e %> </li>
												<% } %>
												<% flash[:errors]=nil %>
								</ul>
				</div>
<% end %>
<% form_for :executive, :url => "/admin/executives/update/#{@executive.id}", :html => {:multipart => true,:name=>"edit_executive_form"} do |f| -%>
				<%= render :partial => 'form', :locals => {:f => f, :button_img => 'update_profile.png' }%>
<% end %>
